<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DealSpotter" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/lightgreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DealSpotter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="colored_checkbox" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/lightgreen</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>
    
    <style name="MyRatingbar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">#4d000000</item>
        <item name="colorControlActivated">#FFDF00</item>
    </style>

    <style name="Theme.DealSpotter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DealSpotter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>